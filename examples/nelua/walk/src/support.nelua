-- Setup

##[[
  cflags "-Os"
  -- cflags "-Os -flto" -- slower to build but slightly smaller
  ldflags "-Wl,--export-dynamic,--strip-all"
  context.rootpragmas.nogcentry = true

  require "io"

  function read_all(file)
    local f = assert(io.open(file, "rb"))
    local content = f:read("*all")
    f:close()
    return content
  end
]]

-- Init gc first!

require "allocators.gc"
gc:init(nilptr)

-- Actual exported things

local support = @record{}

local support.GcStep = @record{}

function support.GcStep:__close()
  gc:step()
end

return support
